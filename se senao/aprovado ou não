programa { 
  funcao inicio() { 
	real n1, n2, n3, media 
 
	escreva("Digite sua primeira nota: ") 
	leia(n1) 
	escreva("Digite sua segunda nota: ") 
	leia(n2) 
	escreva("Digite sua terceira nota: ") 
	leia(n3) 
 
	media = (n1 + n2 + n3) / 3 
 
	se(media >= 6){ 
  	escreva(media, " Aprovado") 
	} 
	senao{ 
  	escreva(media, " Reprovado") 
	} 
	}
	}
