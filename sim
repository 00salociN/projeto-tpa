programa {
  funcao inicio() {
   
    inteiro numero[10]
    inteiro i


    para(i = 0; i < 10; i++){
      escreva("Digite o ", i + 1, "o número: ")
      leia(numero[i])
    }
    escreva("\nOs números pares são: \n")
    para(i = 0; i < 10; i++){
      se (numero[i] % 2 == 0){
        escreva(numero[i], "\t")
      }
    }
  }
}
